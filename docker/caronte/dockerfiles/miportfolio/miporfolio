FROM jiahaolin69/nginxclase

ARG PROYECTO
ARG SCRIPT
USER root

RUN mkdir -P /root/admin/base/portfolio
WORKDIR /root/admin/base/portfolio
COPY ${PROYECTO} /usr/share/nginx/html
COPY ${PROYECTO} /var/www/html
COPY ${SCRIPT} /root/admin/base/portfolio/start.sh
RUN chmod +x /root/admin/base/portfolio/start.sh

ENTRYPOINT [ "/root/admin/base/portfolio/start.sh" ]
